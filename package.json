{
  "name": "reomote-control-electron",
  "version": "1.0.0",
  "main": "app/main/index.js",
  "scripts": {
    "start:main": "electron .",
    "start": "concurrently \"yarn start:render\"  \"wait-on http://localhost:3000 && yarn start:main\" ",
    "start:render": "cd app/renderer/src/main && yarn start",
    "postinstall": "electron-builder install-app-deps",
    "build": "cd app/renderer/src/main && yarn run build",
    "pack:mac": "yarn run build && electron-builder --mac",
    "pack:win": "yarn run build && electron-builder --win --ia32"
  },
  "author": "lichen",
  "license": "MIT",
  "dependencies": {
    "about-window": "^1.13.4",
    "electron-builder-squirrel-windows": "^22.9.1",
    "electron-is-dev": "^1.2.0",
    "robotjs": "^0.6.0",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron": "^10.1.3",
    "electron-builder": "^22.9.1",
    "wait-on": "^5.2.0"
  },
  "build": {
    "appId": "com.lichen",
    "productName": "remote-control-electron",
    "files": "app",
    "asar": false,
    "extraFiles": [
      "app/renderer/**/src"
    ],
    "directories": {
      "buildResources": "resource",
      "output": "release"
    },
    "copyright": "Copyright Â© 2020 lichen",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icon.icns"
    },
    "dmg": {
      "background": "resources/background.png",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 180,
          "type": "file"
        }
      ],
      "iconSize": 128
    },
    "win": {
      "icon": "resources/icon.ico",
      "target": [
        "squirrel",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "language": "2052",
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "squirrelWindows": {
      "iconUrl": "https://raw.githubusercontent.com/dengyaolong/geektime-electron/master/img/icon.ico"
    }
  }
}
